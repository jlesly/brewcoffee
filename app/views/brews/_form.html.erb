
<%= render partial: 'layouts/errors', locals: {object: @brew} %>

<%= form_for(@brew) do |f| %>
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <br>
    <div>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
    </div>
    <br>
    <div>
    <%= f.label :grind_size %>
    <%= f.number_field :grind_size %>
    </div>
    <br>
    <div>
    <%= f.label :dose %>
    <%= f.number_field :dose %>
    </div>
    <br>
    <div>
    <%= f.label :extraction_time %>
    <%= f.number_field :extraction_time %>
    </div>
    <br>
    <div>
    <%= f.label :extraction_volume %>
    <%= f.number_field :extraction_volume%>
    </div>
    <br>
    <div>
    <h4>Select the equipment used to brew this coffee:</h4>
    <p>
    <%= f.collection_select(:equipment_id, Equipment.all, :id, :brand, {:prompt => 'Select brand'}) %>
    </p>
    <p>
    <%= f.collection_select(:equipment_id, Equipment.all, :id, :model, {:prompt => 'Select model'}) %>
    </p>
    <div>
    <h4>If the equipment you used is not listed above, create it here:</h4>
    <%= f.fields_for :equipment do |e| %>
        <%= e.label :brand %>
        <%= e.text_field :brand %>

        <%= e.label :model %>
        <%= e.text_field :model %>
    </div>
    
    <% end %>
    <%= f.submit %>
<% end %>